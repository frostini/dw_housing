<h1>Hello index for dwelling</h1>


<%= form_tag("/search", method: "get", remote: true, id: "search-form") do %>
	 <%= label_tag(:distance, "Search for:") %>
  <%= text_field_tag(:distance) %>

  <div style="width:100px;height:20px;border: 1px black solid;">
<%= check_box(:dwelling_type, "apartment", {class: ''}, "yes", "no") %>
<%= label_tag(:dwelling_type, "apartment") %>
</div>
<div style="width:100px;height:20px;border: 1px black solid;">
<%= check_box(:dwelling_type, "townhome", {class: ''}, "yes", "no") %>
<%= label_tag(:dwelling_type, "townhome") %>
</div>
<div style="width:100px;height:20px;border: 1px black solid;">
<%= check_box(:dwelling_type, "detached", {class: ''}, "yes", "no") %>
<%= label_tag(:dwelling_type, "Detached") %>
</div>
<%= hidden_field_tag('proximity_lower')%> 
<%= hidden_field_tag('proximity_higher')%> 

<%= hidden_field_tag('price_lower')%> 
<%= hidden_field_tag('price_higher')%> 

<%= label_tag(:bedrooms, "bedrooms") %>
<%= select_tag(:bedrooms, options_for_select([['All', 0], ['1+', 1]], 0)) %>
<%= label_tag(:baths, "bathrooms") %>
<%= select_tag(:baths, options_for_select([['All', 0], ['1+', 1]], 0)) %>
<%= label_tag(:occupants, "occupants") %>
<%= select_tag(:occupants, options_for_select([['All', 0], ['1+', 1]], 0)) %>



  <%= submit_tag("Find", class: 'btn btn-warning', id: 'dwelling_search_form') %>
<%end%>

<div style="padding:20px 10%;">
<div id="monthly_payment" class="w-80-p c-w-m"></div>
<span class="example-val" id="slider-snap-value-lower"></span>
<span class="example-val" id="slider-snap-value-upper"></span>
</div>
<div style="padding:20px 10%;">
<div id="nonlinear" class="w-80-p c-w-m"></div>
<span class="example-val" id="slider-snap-value-lower_1"></span>
<span class="example-val" id="slider-snap-value-upper_2"></span>
</div>

<div style="padding-top:50px;">
<p><%=@dwellings.inspect%></p>
</div>

<%= render "dwellings_list" %>
